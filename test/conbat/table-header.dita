					<colspec colname="c1" colnum="1" colwidth="1.0*"/>
					<colspec colname="newCol2" colnum="2" colwidth="1*"/>
					<colspec colname="c2" colnum="3" colwidth="1.0*"/>
					<tbody>
						<row>
							<entry/>
							<entry/>
							<entry/>
						</row>
						<row>
							<entry/>
							<entry/>
							<entry/>
						</row>
					</tbody>
				</tgroup>
			</table>
		</section>
		<section>
			<title>Table with real Header</title>
			<table frame="all" rowsep="1" colsep="1" id="ufq_kjy_xt">
				<tgroup cols="3">
					<colspec colname="c1" colnum="1" colwidth="1.0*"/>
					<colspec colname="c2" colnum="2" colwidth="1.0*"/>
