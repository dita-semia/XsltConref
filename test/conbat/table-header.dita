					<thead>
						<row>
							<entry>Header 1</entry>
							<entry>Header 2</entry>
							<entry>Header 3</entry>
						</row>
					</thead>
					<tbody>
						<row>
							<entry/>
							<entry/>
							<entry/>
						</row>
						<row>
							<entry/>
							<entry/>
							<entry/>
						</row>
					</tbody>
				</tgroup>
			</table>
		</section>
