				cba:header="Header 1|Header 2|Header 3">
				<strow>
					<stentry/>
					<stentry/>
					<stentry/>
				</strow>
				<strow>
					<stentry/>
					<stentry/>
					<stentry/>
				</strow>
			</simpletable>
		</section>
		<section>
			<title>Simpletable with real Header</title>
			<simpletable frame="all" relcolwidth="1.0* 1.0* 1.0*" id="er1_njy_xt">
				<sthead>
					<stentry>Header 1</stentry>
